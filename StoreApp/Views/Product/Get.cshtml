@model Product

<div class="row text-center">
    <div class="col-md-12">
        <div class="text-center">
            <h6 class="display-6">@Model.ProductName</h6>
            <img class="img-fluid shadow rounded-3 p-5 my-3" src="@Model?.ImageUrl" alt="@Model?.ImageUrl"/>
            <p class="lead text-danger">@Model.Price.ToString("c")</p>
        </div>

<div class="btn-group">
    <a class="btn btn-sm btn-outline-secondary" asp-controller="Home" asp-action="Index"><i class="fa fa-house"></i> Home</a>
    <form id="@Model.ProductId" asp-page="/cart" method="post">
            <input type="hidden" asp-for="ProductId"/>
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>
                <button type="submit" class="btn btn-sm btn-outline-secondary">
                    <i class="fa fa-cart-plus"></i>
                    Add To Cart
                </button> 
            </form>
    <a class="btn btn-sm btn-outline-secondary" asp-controller="Product" asp-action="Index"><i class="fa fa-list"></i> Products</a>
</div>
    </div>
</div>

